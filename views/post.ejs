<h1>Post by <%= post.author.username %></h1>
<p><%= post.content %></p>
<% if (post.images.length > 0) { %>
  <% post.images.forEach(image => { %>
    <img src="<%= image %>" alt="Post image" width="200">
  <% }) %>
<% } %>
<p>Likes: <%= post.likes.length %></p>
<form action="/posts/<%= post._id %>/like" method="POST">
  <button type="submit">Like</button>
</form>

<h2>Comments</h2>
<% comments.forEach(comment => { %>
  <div>
    <h3><%= comment.author.username %></h3>
    <p><%= comment.content %></p>
    <p>Likes: <%= comment.likes.length %></p>
    <form action="/posts/comments/<%= comment._id %>/like" method="POST">
      <button type="submit">Like Comment</button>
    </form>
  </div>
<% }) %>

<h2>Add Comment</h2>
<form action="/posts/<%= post._id %>/comments" method="POST">
  <textarea name="content" required></textarea>
  <button type="submit">Comment</button>
</form>

<a href="/posts">Return to home</a>