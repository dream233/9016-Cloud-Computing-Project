<h1>Posts</h1>
<a href="/posts/new">Create New Post</a> | <a href="/profile">My Profile</a>
<% posts.forEach(post => { %>
  <div>
    <h2>Post by <%= post.author.username %></h2>
    <p><%= post.content %></p>
    <% if (post.images.length > 0) { %>
      <% post.images.forEach(image => { %>
        <img src="<%= image %>" alt="Post image" width="200">
      <% }) %>
    <% } %>
    <p>Likes: <%= post.likes.length %></p>
    <a href="/posts/<%= post._id %>">View Post</a>
  </div>
<% }) %>